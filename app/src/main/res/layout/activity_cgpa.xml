<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CgpaActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/kalpurush"
                android:text="আপনার CGPA বের করুন"
                android:textAllCaps="false"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/first_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="1st Subject number"
                android:inputType="number|numberDecimal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/two_tET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="2nd Subject number"
                android:inputType="number|numberDecimal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/three_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="3rd Subject number"
                android:inputType="number|numberDecimal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/four_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_comment"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="4th Subject number"
                android:inputType="number|numberDecimal"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />


            <EditText
                android:id="@+id/total_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_total"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="Here show your Total...!"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/avg_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_grade"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="Here show your Average...!"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/grade_ET"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/custom_input"
                android:drawableStart="@drawable/ic_add"
                android:drawablePadding="12dp"
                android:ems="10"
                android:fontFamily="@font/ubuntu_medium"
                android:hint="Here show your Grade...!"
                android:inputType="text"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="14sp" />

            <Button
                android:id="@+id/btn"
                android:layout_width="350dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:text="Calculate"
                android:textColor="@color/white"
                android:backgroundTint="@color/black"
                android:fontFamily="@font/ubuntu_medium"
                android:textAllCaps="false"
                />


        </LinearLayout>

    </ScrollView>

</LinearLayout>